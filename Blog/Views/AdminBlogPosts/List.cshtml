@model List<Blog.Models.Domain.BlogPost>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show Blog Posts</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Heading</th>
                    <th>Page Title</th>
                    <th>PublishedDate</th>
                    <th>Author</th>
                    <th>Tags</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                        <td>@blogPost.PageTitle</td>
                        <td>@blogPost.PublishedDate</td>
                        <td>@blogPost.Author</td>
                        <td>
                            <div class="d-flex">
                                @foreach(var tag in blogPost.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td><a class="btn btn-primary" asp-area="" asp-controller="AdminBlogPosts" asp-action="Edit" asp-route-id="@blogPost.Id">Edit</a></td>


                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p>No BlogPosts available</p>
    }
</div>